<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zavrsni.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="lightGrey">#DDDDDD</Color>
            <Color x:Key="darkGrey">#222831</Color>
            <Color x:Key="blueGrey">#30475E</Color>
            <Color x:Key="lightRed">#F05454</Color>

            <Style x:Key="mainButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource lightRed}"/>
                <Setter Property="TextColor" Value="{StaticResource lightGrey}"/>
                <Setter Property="CornerRadius" Value="20"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>